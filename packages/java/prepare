#!/usr/bin/env bash

package='java'
file="jre-8u121-linux-x64.tar.gz"
url="http://download.oracle.com/otn-pub/java/jdk/8u121-b13/e9e7ea248e2c4826b92b3f075a80e441/$file"

if [ ! -s "$package/$file" ]; then
  mkdir -p "$package"

  wget -qO "$package/$file" \
    --no-check-certificate \
    --no-cookies \
    --header "Cookie: oraclelicense=accept-securebackup-cookie" \
    --content-disposition \
    "$url"
fi

exit 0
