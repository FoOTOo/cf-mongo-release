#!/usr/bin/env bash

# abort script on any command that exits with a non zero value
set -e
exec 1>> /var/vcap/sys/log/packaging.log
exec 2>> /var/vcap/sys/log/packaging.err.log

export PATH="/var/vcap/packages/java/bin/:$PATH"

cp -r "$BOSH_PACKAGE_NAME" "$BOSH_INSTALL_TARGET"
cd "$BOSH_PACKAGE_NAME"
bash ./gradlew build -x test
cp ./build/libs/cloudfoundry-mongodb-service-broker.jar "$BOSH_INSTALL_TARGET"
