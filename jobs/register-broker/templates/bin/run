#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/register-broker/helpers/ctl_setup.sh 'register-broker'

EXITSTATUS=0

ls -R
pwd
env
cf push src
EXITSTATUS=$?

echo "Errand register-broker is complete; exit status $EXITSTATUS"
exit $EXITSTATUS
