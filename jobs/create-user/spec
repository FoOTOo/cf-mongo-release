  mongod.MONGODB_USER:
    description: 'MongoDB username'
  mongod.MONGODB_PASS:
    description: 'MongoDB password'
  mongod.MONGODB_DATABASE:
    description: 'MongoDB database'
  mongod.MONGODB_HOST:
    description: 'MongoDB hostname'
  mongod.MONGODB_URI:
    description: 'MongoDB URI'
