#!/usr/bin/env bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

PATH=$PATH:/var/vcap/packages/cf-cli/bin # add cf to PATH

CF_API_URL='<%= p('cf.api_endpoint') %>'
CF_USER='<%= p('cf.user') %>'
CF_PASSWORD='<%= p('cf.password') %>'

<% if p('cf.skip_ssl_verification') %>
cf api --skip-ssl-validation $CF_API_URL
<% else %>
cf api $CF_API_URL
<% end %>

cf auth $CF_PASSWORD $CF_PASSWORD

cf disable-service-access p-mongodb
cf delete-service p-mongodb -f
cf delete-service-broker p-mongodb -f
